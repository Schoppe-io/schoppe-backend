<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS}|[%thread]|%-5level|%logger{36}|%X{X-User-Id}|%X{X-Request-Id}|%X{X-APP-VERSION} - %msg %ex %n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
